{
  "name": "taxsyncqc",
  "version": "1.0.0",
  "description": "Quebec + Federal tax credits estimator (2025) â€” Free, open-source, bilingual (FR/EN)",
  "main": "cli.js",
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .js --ext .html",
    "format": "prettier --write \"**/*.{js,html,css,json,md}\"",
    "test": "c8 --reporter=text --reporter=lcov node --test tests/*.test.js",
    "test:e2e": "playwright test",
    "test:all": "npm test && npm run test:e2e",
    "prepare": "husky install",
    "server": "node email-server.js",
    "server:dev": "NODE_ENV=development node email-server.js",
    "deploy:test": "bash test-deployment.sh",
    "deploy:vercel": "vercel --prod",
    "deploy:docker": "docker build -t taxsync-email-automation . && docker run -p 3000:3000 --env-file .env taxsync-email-automation"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Isaloum/TaxSyncQC.git"
  },
  "keywords": [
    "quebec",
    "tax",
    "credits",
    "rrsp",
    "rl-1",
    "t4",
    "solidarity",
    "work-premium",
    "cwb",
    "canada"
  ],
  "author": "Ihab Saloum",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Isaloum/TaxSyncQC/issues"
  },
  "homepage": "https://Isaloum.github.io/TaxSyncQC",
  "devDependencies": {
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "c8": "^10.1.3",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "axe-core": "^4.11.1",
    "@axe-core/playwright": "^4.5.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ]
  }
}
